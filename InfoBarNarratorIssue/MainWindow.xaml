<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="InfoBarNarratorIssue.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:InfoBarNarratorIssue"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="InfoBarNarratorIssue"
    mc:Ignorable="d">

    <NavigationView
        x:Name="NavView"
        IsSettingsVisible="False"
        PaneDisplayMode="Left"
        SelectionChanged="NavView_SelectionChanged">
        <NavigationView.MenuItems>
            <NavigationViewItem
                Content="Page 1"
                Icon="Page"
                Tag="page1" />
            <NavigationViewItem
                Content="Page 2"
                Icon="Page"
                Tag="page2" />
        </NavigationView.MenuItems>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Frame
                x:Name="NavFrame"
                Grid.Row="0"
                Grid.RowSpan="2" />
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <CheckBox
                    x:Name="IsOpenCheckBox1"
                    HorizontalAlignment="Center"
                    Content="Is Open"
                    IsChecked="{x:Bind TestInfoBar1.IsOpen, Mode=TwoWay}" />
                <InfoBar
                    x:Name="TestInfoBar1"
                    Title="Some title"
                    Grid.Row="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    AutomationProperties.LiveSetting="Assertive"
                    BorderThickness="0"
                    IsClosable="False"
                    IsOpen="False"
                    Message="Some message."
                    Severity="Informational"
                    Visibility="Visible">
                    <InfoBar.ActionButton>
                        <Button
                            x:Name="LibraryInfoBarActionButton"
                            HorizontalAlignment="Right"
                            Content="Some action button"
                            Visibility="Visible" />
                    </InfoBar.ActionButton>
                    <ProgressBar
                        Margin="0,0,20,0"
                        HorizontalAlignment="Stretch"
                        IsIndeterminate="True"
                        Visibility="Visible" />
                </InfoBar>
            </StackPanel>
        </Grid>
    </NavigationView>
</Window>
